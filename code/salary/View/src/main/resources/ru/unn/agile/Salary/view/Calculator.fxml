<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import ru.unn.agile.Salary.viewModel.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.Salary.view.Calculator">
    <fx:define>
        <ViewModel fx:id="viewModel" />
    </fx:define>
    <children>
        <VBox alignment="TOP_CENTER" layoutX="6.0" prefHeight="352.0" prefWidth="742.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox>
                    <children>
                        <Separator prefWidth="28.0" visible="false" />
                        <Label minWidth="-Infinity" text="Pay (hour) ">
                        </Label>
                        <TextField fx:id="txtPay" prefHeight="26.0" prefWidth="177.0" />
                        <Separator prefWidth="168.0" visible="false" />
                        <Label minWidth="-Infinity" text="Worked hours " />
                        <TextField fx:id="txtWorked" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label minWidth="-Infinity" text="Overtime hours " />
                        <TextField fx:id="txtOver" />
                        <Separator prefWidth="135.0" visible="false" />
                        <Label minWidth="-Infinity" text="Administrative leave " />
                        <TextField fx:id="txtAdmin" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Separator prefWidth="450.0" visible="false" />
                        <Button fx:id="btnCalc" defaultButton="true" disable="${viewModel.calculationDisabled}" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Calculate" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label text="Result: " />
                        <Label fx:id="lbResult" maxWidth="1.7976931348623157E308" text="${viewModel.result}" HBox.hgrow="ALWAYS" />
                        <Separator prefWidth="200.0" visible="false" />
                        <Label text="Status: " />
                        <Label fx:id="lbStatus" maxWidth="1.7976931348623157E308" text="${viewModel.status}" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <TextArea fx:id="areaLog" editable="false" prefHeight="200.0" prefWidth="200.0" text="${viewModel.logs}" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</AnchorPane>
